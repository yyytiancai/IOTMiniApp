/**index.wxss**/

page {
    width: 100%;
    height: 100%;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    color: #000;
}

.usermotto {
    margin-top: 200px;
}

swiper {
    width: 757rpx;
    height: 350rpx;
}

swiper image {
    width: 100%;
}

.floor_container {
    display: flex;
    opacity: 0.6;
    margin-top: 5rpx;
    margin-left: 5px;
    margin-right: 5px;
    height: 60px;
    /* animation: move1 10s infinite Linear; */
}

.floor_container .floor_title {
    background-color: #3366CC;
    justify-content: center;
    align-items: center;
    width: 30%;
    display: flex;
    text-align: center;
    border-right: 5rpx solid #fff;
}

.floor_container .floor_item {
    background-color: #3366CC;
    border-right: 5rpx solid #fff;
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    animation: move1 10s infinite Linear;
}
.search_content{
    width: 60%;
    margin-top: 30rpx;
    padding: 40rpx;
 }
.search_item{
 
    background-color: #3366CC;
    margin-top: 20rpx;
    opacity:0.5;
    border-radius: 20rpx;
    font-size:26rpx;
    padding :15rpx  10rpx;
    border-bottom: 1rpx solid#3366CC;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
  }

.write {
    justify-content: center;
    align-items: center;
}

.write .to {
    opacity: 0.6;
    margin-top: 80px;
    margin-left: 70px;
    width: 60%;
    height: 40px;
    border-radius: 20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    font-size: 20px;
    padding: 0;
    background-color: #3366CC;
    color:black;
}

@keyframes move1 {
    0% {
        transform: rotateY(0deg);
    }
    10% {
        transform: rotateY(5deg);
    }
    20% {
        transform: rotateY(10deg);
    }
    30% {
        transform: rotateY(15deg);
    }
    40% {
        transform: rotateY(10deg);
    }
    60% {
        transform: rotateY(0deg);
    }
    70% {
        transform: rotateY(-5deg);
    }
    80% {
        transform: rotateY(-10deg);
    }
    50% {
        transform: rotateY(5deg);
    }
    100% {
        transform: rotateY(0deg);
    }
    90% {
        transform: rotateY(-5deg);
    }
}